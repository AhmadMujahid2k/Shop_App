<h1>Listing Shop</h1>


<style>

body{
    font-family: serif
}
h1 {
  background-color: black;
  color: white;
   text-align: center;
}
a:link, a:visited {
  background-color: #ADD8E6;
  color: white;
  padding: 10px 20px;
  text-align: center;
  display: inline-block;
}
a:hover, a:active {
 background-color: blue;
}
table, th,tr{
  border: 1px solid;
  text-align: center;
  height: 70px;
  width: 50%;
}
td{
  border: 1px solid;
  text-align: center;

}


</style>


<%= link_to 'New shop', new_shop_path %>

<table>
  <tr>
    <th>Shop Name</th>
    <th>Shop Description</th>
    <th colspan="3"></th>
  </tr>

  <% @shops.each do |shop| %>
    <tr>
      <td><%= shop.shop_name %></td>
      <td><%= shop.shop_description %></td>
      <td><%= link_to 'Show', shop_path(shop) %></td>
      <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
       <td><%= link_to 'Destroy', shop_path(shop),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
